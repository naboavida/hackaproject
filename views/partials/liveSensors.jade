div.wrap
	ul.breadcrumb
		li
			a(href='/') Home
		li
			a(href='/projects') Projects
		li
			a(href='/dashboard/{{pid}}') Dashboard
		li
			a(href='/dashboard/{{pid}}/{{pointid}}') Point {{pointid}}
		li
			a(href='') Parameter
div.mainDiv
	div.leftDiv
		div.leftDivContent
			div.areaInfo
				div.leftInfoDiv
					img.thumbnail(src='pics/saotome.jpg')
				div.rightInfoDiv
					div
						h2(style='margin-left:25px;') {{project.title}}
					div
						div.leftBarDiv
							h4 {{project.location}}
							h2 Point {{pointid}}
						div.rightBarDiv
							h4 {{project.area}} km2
			div(ng-controller="DemoController")
				div
					button(ng-click='addPoint()') Add Point
					p {{addPointMode}}
				div#map
					leaflet(center="madeira",width="450",height="400",markers="markers",leafletMap="leafletMap")
					//- leaflet(center="madeira",width="500",height="400",markers="markers",event-broadcast="events")
	div.rightDiv(ng-controller="Hello")
		h2(style='text-align:center;margin-bottom:25px;') Environmental Sensors in Realtime
		div.topCenteredButtons.largeTopCenteredButtons
			p Current Readings
			//- /parameter/{{pid}}/{{pointiid}}/{{parameter.pointparmid}}/{{pointid}}
			p: a(href='/liveSensorsReadings/{{pid}}/{{pointid}}') History Readings
		div(style='width:630px; margin-left:auto; margin-right:auto;margin-top:150px;')
			ul.list-item
				li.item
					div.widgetContent
						h3.widgetTitle Temperature
						div.line
							div.line-item.value 22
							div.line-item.unit ยบ
				li.item
					div.widgetContent
						h3.widgetTitle Relative Humidity
						div.line
							div.line-item.value {{greeting[0].RH}}
							div.line-item.unit %
						div.line.bottomRow(style='width:100%;')
							div {{rhPos}}{{rh}}
				li.item
					div.widgetContent
						h3.widgetTitle Water Level
						div.line
							div.line-item.value High
