//- extends layout

//- block body
div
  ul.breadcrumb
    li
      a(href='/') Home
    li
      a(href='') Projects
      
  div
    ul.menuItem.menuItemLarge
      li.listItem.listItemLarge(ng-repeat="project in projects")
        a(href='/dashboard/{{project.id}}')
          div.innerItem.innerItemBig
            img(src='pics/saotome.jpg')
            div
              p.projectTitle {{project.title}}
              p(style='margin-top:5px;font-size:12px;'){{project.location}}
              p(style='margin-top:5px;font-size:12px;'){{project.area}} m2
      li.listItem.listItemLarge.add-project
        a(href='/addProject')
          div.innerItem.innerItemBig
            p.innerItemBigParagraph Add Project

